- sponsors = Sponsor.list
%ul.friends
  - SPONSOR_TYPES[0...-1].each do |type|
    %li.friend
      = link_to(t("sidebar.#{type[1]}"), article_by_name_path(:category => "sponsors", :name => "index"), :class => 'friend-header')
      %ul
        = render :partial => "layouts/partials/sponsor", :collection => sponsors[type[0]]
